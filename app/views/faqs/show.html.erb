<% provide :title, "FAQ - #{@faq.question}" %>

<div style="border-style: solid; border-color: black; border-width: 2px; width: 90%; margin-left: auto; margin-right: auto; min-height: 4ex;">
  <%= markdown @faq.answer %>
</div>

<hr/>
<p>This FAQ is <%= 'not' unless @faq.active %> active.</p>

<p>This FAQ has the following tags:</p>
<ul>
  <%- @faq.tags.each do |tag| %>
    <li><%= tag.name.titleize %></li>
  <%- end %>
</ul>

<%= link_to 'Edit', edit_faq_path(@faq) %> |
<%= link_to 'Back', faqs_path %>
