<%= page_title "#{current_user.name}'s Account - Change Password" %>

<%= form_tag update_my_password_path, :method => :put do %>
  <% if @user.errors.any? %>
    <div id="error_messages">
      <h2>The following errors occured:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag :current_password %><br/>
    <%= password_field_tag :current_password %>
  </div>
  <div class="field">
    <%= label_tag :new_password %><br/>
    <%= div_for_password_strength_meter %><br/>
    <%= password_field_tag :new_password, nil, {:id => :password1} %><br/>
    <%= link_to 'Need help picking a good password?', 'https://www.grc.com/haystack.htm', {:target => '_blank'} %>
  </div>
  <div class="field">
    <%= label_tag :new_password_confirmation %><br/>
    <%= password_field_tag :new_password_confirmation, nil, {:id => :password2} %>
  </div>

  <div class="actions">
    <%= submit_tag 'Change password' %>
  </div>
<% end %>
