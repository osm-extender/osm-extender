<%= page_title 'Shared Events (management)' %>

<%- unless @shared_events.empty? %>
  <h2>Your Shared Events</h2>
  <table>
    <tr>
      <th>Name</th>
      <th>Start Date</th>
      <th>Actions</th>
      <th>Link to share</th>
    </tr>
  
    <% @shared_events.each do |shared_event| %>
      <tr>
        <td><%= shared_event.name %></td>
        <td><%= ordinalized_date(shared_event.start_date, "%a %d of %b %Y") %></td>
        <td>
          <%= link_to '[Details]', shared_event %>
          <%= link_to '[Edit]', edit_shared_event_path(shared_event) %>
          <%= link_to '[Destroy]', shared_event, data: {:confirm => 'Are you sure?'}, method: :delete %>
        </td>
        <td>
          <%= link_to nil, new_shared_event_attendance_url({:se_id => shared_event.id}) %>
        </td>
      </tr>
    <%- end %>
  </table>

  <%= link_to('create a shared event', new_shared_event_path) if (Date.today < Date.new(2013, 11, 25)) %>

<%- else %>
  <p>You do not currently have any shared events setup, <%= link_to('create one', new_shared_event_path) if (Date.today < Date.new(2013, 11, 25)) %>.</p>
<%- end %>
