<%= page_title 'Sign up' %>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_messages">
      <h2>The following errors occured:</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%- if @signup_code %>
    <div class="field">
      <%= label_tag :signup_code %><br/>
      <%= text_field_tag :signup_code %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email_address %><br/>
    <%= f.email_field :email_address %>
  </div>
  <div class="field">
    <%= f.label :password %><br/>
    <%= div_for_password_strength_meter %><br/>
    <%= f.password_field :password, {:id => :password1} %><br/>
    <%= link_to 'Need help picking a good password?', 'https://www.grc.com/haystack.htm', {:target => '_blank'} %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, {:id => :password2} %>
  </div>
  <div class="field">
    <%= f.check_box :gdpr_consent %>
    <%= f.label :gdpr_consent, "I consent to my information being processed inline with the #{link_to 'Privacy Policy', privacy_policy_path, target: '_blank'}.".html_safe %>
  </div>
  <div class="actions"><%= f.submit 'Sign up' %></div>
<% end %>
