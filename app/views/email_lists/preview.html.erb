<% provide :title, "Email Lists" %>

<%= render 'list' %>

<h2>List Options</h2>
You asked for these email addresses<ul>
<%- [:email1, :email2, :email3, :email4].each do |emailN| %>
  <% if @email_list.send(emailN) %><li><%= current_section.column_names[emailN] %></li><% end %>
<%- end %>
</ul>
For members who
<%= @email_list.match_type ? 'are' : 'are not' %>
in the
<%- @groupings[@email_list.section_id].merge({'Any'=>0}).each do |key, value| %>
  <%= key.downcase if value.to_i == @email_list.match_grouping %>
<%- end %>
<%= get_grouping_name(current_section.type) %>.

<h2>Save List</h2>
<%= form_for @email_list, :validate=>true do |f| %>
  <%- [:email1, :email2, :email3, :email4, :match_type, :match_grouping, :section_id].each do |key| %>
    <%= f.hidden_field key %>
  <%- end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.check_box :notify_changed, {}, true, false %>
    <%= f.label :notify_changed, 'Notify me when an address changes (checks each night)' %>
  </div>

  <div class="actions">
    <%= f.submit 'Save this list' %>
  </div>
<% end %>
