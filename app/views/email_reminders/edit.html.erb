<% provide :title, 'Edit email reminder' %>

<h2>Reminder details</h2>
<%= render 'form' %>

<h2>Items</h2>
<%- unless @email_reminder.items.empty? %>
  <p>This reminder contains the following items.</p>
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Configuration</th>
        <th>Actions</th>
      </tr>
    </thead>
  
    <tbody id="items" data-update-url="<%= re_order_email_reminder_url %>" data-csrf-token="<%= form_authenticity_token.to_s %>">
      <%- @email_reminder.items.each do |item| %>
        <tr id="email_reminder_item_<%= item.id %>">
          <td><span class="drag_handle">[re-order]</span> <%= item.class.human_name %></td>
          <td><%= item.human_configuration %></td>
          <td>
            <%= link_to '[Edit]', self.send("edit_#{item.class.to_s.gsub!(/(.)([A-Z])/,'\1_\2').downcase!}_path", @email_reminder, item) %>
            <%= link_to '[Destroy]', email_reminder_item_path(@email_reminder, item), data: {:confirm => 'Are you sure?'}, method: :delete %>
          </td>
        </tr>
      <%- end %>
    </tbody>
  </table>
<%- else %>
  <p>This email reminder has no items yet.</p>
<%- end %>

<br/>

<%- unless @available_items.empty? %>
  <p>You can add an item by using the links below.</p>
  <ul>
    <%- @available_items.each do |item| %>
      <%- if item[:as_link] %>
        <li><%= link_to item[:type].human_name, self.send("new_#{item[:type].name.underscore}_path", @email_reminder) %>
      <%- else %>
        <li><%= item[:type].human_name %> - You need to fix your <%= link_to 'OSM permissions', osm_permissions_path %> to have access to this item
      <%- end %>
    <%- end %>
  </ul>
<%- else %>
  <p>There are no more items you can add.</p>
<%- end %>
