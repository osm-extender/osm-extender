<% provide :title, "#{current_user.name}'s Page" %>

<%- unless current_user.connected_to_osm? %>
  <p>You have not yet connected your account to your OSM account - <%= link_to 'Connect now', connect_to_osm_path %></p>
<%- end %>


<%- if @roles.size > 1 %>
  <h2>Change Current Section</h2>
  <ul>
  <%- @roles.each do |role| %>
    <li><%= link_to section_name(role), "#{change_section_path}?section_id=#{role.section_id}" %></li>
  <%- end %>
  </ul>
<%- end %>


<%- if @tasks.size > 0 %>
<h2>Site Tasks</h2>
<ul>
  <%- @tasks.each do |role| %>
    <li><%= link_to role[:name], role[:path] %></li>
  <%- end %>
</ul>
<%- end %>
  