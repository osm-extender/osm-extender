table {
    border-collapse:    collapse;
    margin-left:        auto;
    margin-right:       auto;
}

table.left {
    margin-left: 0px;
}
table.right {
    margin-right: 0px;
}

table, td {
    border:             2px solid green;
}

th {
    border:             2px solid white;
    border-bottom-color: green;
    background-color:   green;
    color:              white;
    font-size:          120%;
}

th, td {
    padding:            2px 8px 2px 8px;
}

th.empty, td.empty {
    border-width:       0px;
    border-right:       inherit;
}

table th .sortable_current {
  padding-right:        24px;
  background-repeat:    no-repeat;
  background-position:  right center;
}

table th .sortable_asc {
  background-image:     url(<%= image_path 'icons/up_arrow.gif' %>);
}

table th .sortable_desc {
  background-image:     url(<%= image_path 'icons/down_arrow.gif' %>);
}

table th a.sortable {
    color:              white;
}

